    <link rel='stylesheet' href='/css/hero-detail.css'>
{{/partial}}
{{#partial "content"}}

        <h5>Name:</h5>
        <p>{{ hero.name }}</p>
        <h5>Created At:</h5>
        <p> {{ hero.createdAt }}</p>
        <div class="display">
            <div><a href="/heros/{{hero.id}}/update" class="btn btn-half">Edit this post</a></div>
            <div><a href="/squad" class="btn btn-half">Click To add to squad</a></div>
            <div><a href="/heros/{{hero.id}}/delete" class="btn btn-half">DELETE this post (no undo)</a></div>

        </div>




{{/partial}}

